{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["ES2020", "DOM"],
    "types": ["chrome"]
  },
  "include": [
    "content/**/*.ts",
    "popup/**/*.ts",
    "types/**/*.ts",
    "tests/**/*.ts",
    "vitest.config.ts"
  ]
}
